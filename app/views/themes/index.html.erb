<p id="notice"><%= notice %></p>

<h1>Listing Themes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @themes.each do |theme| %>
      <tr>
        <td><%= theme.description %></td>
        <td><%= theme.minutes %></td>
        <td><%= link_to 'Show', subject_theme_path(@subject,theme) %></<td>
        <td><%= link_to 'Edit', edit_subject_theme_path(@subject,theme) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Theme', new_subject_theme_path %>
<p>Total minutes: <%=@themes.reduce(0){|sum,theme|sum+theme.minutes} %></p>
<br>

  <div class="ct-chart ct-golden-section" id="chart2"></div>
  
  <script>
  var contents = [];
  <% @themes.each do |theme| %>
    contents.push('<%= theme.description %>');
  <% end %>

  new Chartist.Bar('.ct-chart', {
  labels: contents,
  series: [
    // [5, 4, 3, 7, 5, 10, 3]
    <%=@themes.map{|theme|theme.minutes}%>
  ]
}, {
  seriesBarDistance: 10,
  reverseData: true,
  horizontalBars: true,
  axisY: {
    offset: 70
  }
});
  </script>