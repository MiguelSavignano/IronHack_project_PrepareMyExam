<%= form_for [@school,@course,@subject,@exam,@study_session] do |f| %>
  <% if @study_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@study_session.errors.count, "error") %> prohibited this study_session from being saved:</h2>

      <ul>
      <% @study_session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.date_field :date, :class => "datepicker" %>
  </div>
  <div class="field">
    <% themes_array = @exam.themes.map { |theme| [theme.description, theme.id] } %>
    <%= select_tag(:theme_id, options_for_select(themes_array)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%end %>
<script> 
$(document).ready(function() {
    $('select').material_select();
    $('.datepicker').pickadate({
      selectMonths: true, // Creates a dropdown to control month
      selectYears: 15 // Creates a dropdown of 15 years to control year
    });
});
</script>  