
<link rel="stylesheet" href="/assets/css/lolliclock.css">

<%= form_for [@school,@course,@subject,@exam,@study_session] do |f| %>
  <% if @study_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@study_session.errors.count, "error") %> prohibited this study_session from being saved:</h2>
      <ul>
      <% @study_session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-field">
    <i class="mdi-action-event prefix"></i>
    <label for="icon_prefix">Date</label>
    <%= f.date_field :date, :class => "datepicker", required:""%>
  </div>
 <div class="input-field">
    <%= select_tag(:theme_id, options_for_select(@exam.themes_array)) %>
  </div>
   <div class="input-field">
    <i class="mdi-device-access-time prefix"></i>
    <%= f.time_field :minutes %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
<%end %>
<script src="/assets/js/lolliclock.js"></script>
<script>
      $('#pick-a-time').lolliclock({autoclose:true});
</script>
<script> 
$(document).ready(function() {
    $('select').material_select();
    $('.datepicker').pickadate({
      selectMonths: true, // Creates a dropdown to control month
      selectYears: 15 // Creates a dropdown of 15 years to control year
    });
});
</script>  