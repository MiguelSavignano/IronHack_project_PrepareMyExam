<h1>Listing Exams</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.description %></td>
        <td><%= exam.date %></td>
        <td><%= link_to 'Show', school_course_subject_exam_path(@school,@course,@subject,exam)%></td>
        <td><%= link_to 'Edit', edit_school_course_subject_exam_path(@school,@course,@subject,exam) %></td>
    <% end %>
  </tbody>
</table>

