<link  rel="stylesheet" type="text/css" href="/assets/css/line_chart_animation.css">
<div class="row">
   <div class="col s12 m6 l6">
      <h4 class="header card-panel pink darken-3">
        <span class="white-text text-darken-2">Near exam</span>
      </h4>
      <div class="card-panel indigo lighten-5">
        <div class="row">
          <div class="col s5 m5 l3">
              <blockquote>
                <label><span class="black-text text-darken-2">Date</span></label>
                <p><%=@first_exam.date %></p>  
                <br>
              </blockquote>
          </div>
          <div class="col s5 m5 l3">
              <blockquote>
                <label><span class="black-text text-darken-2">Exam</span></label>
                <p><%=@first_exam.subject.name%></p>
                <p><%=@first_exam.description %></p>  
              </blockquote>
          </div>
          <div class="col s5 m5 l3">
             <blockquote>
                <label><span class="black-text text-darken-2">Estimate time</span></label>
                <p><%=@first_exam.sum_themes.to_hours %></p> 
                <br>
              </blockquote>
          </div> 
          <div class="col s5 m5 l3">
              <blockquote>
                <label><span class="black-text text-darken-2">Days before</span></label>
                <p><%=@first_exam.days_before %></p> 
                <br>
              </blockquote>
          </div>
        </div>
         <blockquote><p>You have suty <%=@first_exam.study_percent(current_user) %>%</p></blockquote>
        <div  class="ct-chart ct-golden-section" id="chart_pie"></div>
   </div>
</div>
   <div class="col s12 m6 l6">
     <h4 class="header card-panel pink darken-3">
        <span class="white-text text-darken-2">All study sessions time</span>
     </h4>
     <div class="card-panel indigo lighten-5">
       <div class="ct-chart ct-golden-section" id="chart_line"></div>
     </div>
   </div>
</div>
<script type="text/javascript" src="/assets/js/draw_chartist_pie.js"></script>
<script type="text/javascript" src="/assets/js/draw_chartist_line_study_sessions.js"></script>
<script type="text/javascript" src="/assets/js/get_study_data.js"></script>
