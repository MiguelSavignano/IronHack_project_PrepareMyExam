<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
      <td><%=course.name %>
        <td><%= link_to 'Show subjects', school_course_subjects_path(@school,course) %></td>
        <td><%= link_to 'Show', school_course_path(@school,course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

